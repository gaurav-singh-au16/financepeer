<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">

    <title>Json File Upload</title>
</head>

<body>
    {{!-- Header --}}
    <header class="p-2 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/login" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/login" class="nav-link px-2 text-light">Home</a></li>
                    <li><a href="/logout" class="nav-link px-2 text-light">Logout</a></li>
                </ul>
            </div>
        </div>
    </header>

    <form action="/uploadfile" method="POST" enctype="multipart/form-data">
        <div class='container border border-dark rounded w-50 bg-light mt-5'>
            <h1 class='text-center display-5 mt-3'>Upload File</h1>
            <div class="mb-3">
                <label for="formFile" class="form-label">Upload JSON File</label>
                <input class="form-control" type="file" id="formFile" name="filename">
                <button class='btn btn-primary my-3'>Upload</button>
            </div>
        </div>
    </form>

    {{!-- Footer --}}
    <hr class="featurette-divider">
    <footer class="container">
        <p class="float-end"><a href="#">Back to top</a></p>
        <h6 class="text-center text-primary">Developed By Gaurav Singh</h6>
        </p>
    </footer>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
        crossorigin="anonymous"></script>

