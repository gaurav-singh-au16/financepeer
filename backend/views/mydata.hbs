<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">

    <title>Json File Upload</title>
</head>

<body>
    {{!-- Header --}}
    <header class="p-2 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/login" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/login" class="nav-link px-2 text-light">Home</a></li>
                    <li><a href="/logout" class="nav-link px-2 text-light">Logout</a></li>
                    <li><a href="/upload" class="nav-link px-2 text-light">Upload</a></li>
                </ul>
            </div>
        </div>
    </header>

    <div class="container row w-100 text-center mx-5">
        {{#each result}}
            <div class="card m-1 bg-light" style="width: 18rem;">
                <div class="card-body col">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.body}}</p>
                    <a href="#" class="card-link">User Id: {{this.userId}}</a>
                    <a href="#" class="card-link">Id: {{this.id}}</a>
                </div>
                </div>
        {{/each}}
    </div>

    {{!-- Footer --}}
    <hr class="featurette-divider">
    <footer class="container">
        <p class="float-end"><a href="#">Back to top</a></p>
        <h6 class="text-center text-primary">Developed By Gaurav Singh</h6>
        </p>
    </footer>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
